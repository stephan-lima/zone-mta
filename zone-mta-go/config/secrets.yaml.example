# Example secrets configuration file
# Copy this to secrets.yaml and fill in real values
# This file should be kept secure and not committed to version control

# Database credentials
databases:
  mongodb:
    uri: "mongodb://username:password@mongo-server:27017/zone-mta-production?authSource=admin"
  redis:
    # Redis password if needed
    # password: "your-redis-password"

# DKIM signing keys (if implemented)
plugins:
  dkim-sign:
    enabled: true
    keys:
      example.com:
        selector: "mail"
        privateKey: |
          -----BEGIN PRIVATE KEY-----
          Your DKIM private key here
          -----END PRIVATE KEY-----